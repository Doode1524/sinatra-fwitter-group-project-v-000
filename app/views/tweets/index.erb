<h2>Welcome, <%= @user.username.capitalize %></h2>
<a href="/users/<%=@user.slug%>">Your Tweets</a>
<a href="/logout">Logout</a>
<br></br>
<% if flash.has?(:message) %>
  <%= flash[:message] %>
<% end %>
<h3>Fwitter Feed</h3>
<form action="/tweets/new" method="get">
  <input type="submit" value="New Tweet">
</form>
<% @tweets.each {|tweet| %>
  <p><%=tweet.content%><p>
  <p>tweeted by: <a href="/users/<%=tweet.user.slug%>"><%=tweet.user.username%></a></p>
  <form action="/tweets/<%=tweet.id%>/edit" method="get">
    <input type="submit" value="Edit Tweet">
  </form>
  <form action="/tweets/<%=tweet.id%>/delete" method="post">
    <input id="hidden" type="hidden" name="_method" value="DELETE">
    <input type="submit" value="Delete Tweet">
  </form>
  <br></br>
<% } %>
